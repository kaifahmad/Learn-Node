<%- include('../includes/header.ejs') %>
    <!--PRODUCT LIST SECTION-->
    <section class="for-full-back color-bg-one" id="services-sec">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-8 col-md-offset-2 ">
                    <h1><i class="fa fa-rocket faa-pulse animated  "></i>Cart</h1>

                </div>
                <div class="row text-center">
                    <div class="col-md-8 col-md-offset-2 ">
                        <h4>
                            <strong>This Section shows the Cart added by the User
                            </strong>
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="for-full-back color-white " id="services-inner">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <% prods.forEach((prod)=>{ %>
                        <div class="col-md-3 ">
                            <div class="service-div">
                                <i class="fa fa-desktop fa-5x faa-vertical animated"></i>
                                <h4>
                                    <%= prod.Name %>
                                </h4>
                                <h4>
                                    <%= prod.Price %> $
                                </h4>
                                <p>Quantity: 
                                    <%= prod.Quantity %>
                                </p>
                                
                           
                                <div class="row">
                                    <a href="/products/<%= prod.ID%>">
                                        <button type="submit" class="btn btn-primary">View Details</button>
                                    </a>
                                    <form action="/remove-from-cart" method="POST">
                                        <input type="hidden" name="product_id" value="<%= prod.ID%>">
                                        <input type="hidden" name="cart_id" value="<%= prod.Cart_Id%>">
                                        <input type="submit" class="btn btn-primary" value="Remove from Cart"></input>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <%}) %>
                </div>
            </div>
        </div>
    </section>
    <!--END SERVICES SECTION-->
    <!--STATS SECTION-->
    <section>
        <div class="container">
            <div class="row ">
                <div class="col-md-3 ">
                    <div class="stats-div">
